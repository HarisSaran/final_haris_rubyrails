<% name = current_user.present? ? current_user.email : 'What are you waiting for, get registerd or sign in so you can shop!' %>


<h1> Welcome, <%= name%> </h1>

<div class="columns is-half">
  <div class="column">
    <h2 class="title is-2"> Best Selling Tools </h2>
    <ol class="ml-5">
      <% @tools.each do | tool | %>
              <div class="card margin-bottom mb-6 margin-right mb-6">
                <div class="card-content">
                    <li>
                      <%= link_to tool.name, tool %>
                      <em>(<%= tool.producer_company.name %>) </em>
                    </li>
                  </div>
              </div>
      <% end %>
    </ol>
  </div>

  <div class="column is-half">
     <h2 class="title is-2"> Top 3 Brands </h2>
     <ol class="ml-5">
              <%# <div class="card margin-bottom mb-6 margin-right mb-6">
                <div class="card-content"> %>
                    <%= render @producer_companies %>
                  <%# </div>
              </div> %>
    </ol>
  </div>
</div>


